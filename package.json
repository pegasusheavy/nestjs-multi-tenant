{
  "name": "@pegasusheavy/nestjs-multi-tenant",
  "version": "0.1.0",
  "description": "A NestJS module for building multi-tenant applications",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepare": "husky",
    "prepublishOnly": "pnpm run lint && pnpm run test && pnpm run build",
    "preversion": "pnpm run lint && pnpm run test",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "nestjs",
    "multi-tenant",
    "multitenancy",
    "tenant",
    "saas",
    "nest",
    "middleware",
    "module",
    "typescript"
  ],
  "author": {
    "name": "Pegasus Heavy Industries LLC",
    "url": "https://github.com/pegasusheavy"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pegasusheavy/nestjs-multi-tenant.git"
  },
  "bugs": {
    "url": "https://github.com/pegasusheavy/nestjs-multi-tenant/issues"
  },
  "homepage": "https://github.com/pegasusheavy/nestjs-multi-tenant#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.20.0",
  "peerDependencies": {
    "@nestjs/common": "^10.0.0 || ^11.0.0",
    "@nestjs/core": "^10.0.0 || ^11.0.0",
    "reflect-metadata": "^0.1.13 || ^0.2.0",
    "rxjs": "^7.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.17.0",
    "@nestjs/common": "^10.4.0",
    "@nestjs/core": "^10.4.0",
    "@nestjs/testing": "^10.4.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import-x": "^4.5.0",
    "eslint-plugin-n": "^17.15.1",
    "eslint-plugin-perfectionist": "^4.4.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-regexp": "^2.7.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.1",
    "eslint-plugin-unicorn": "^57.0.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.18.1",
    "vitest": "2.1.9"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
